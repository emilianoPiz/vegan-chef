<h2 style="display: flex; justify-content: center; color: #fff">
  Book Your Appointment
</h2>
<form action="/book-appointment" method="post">
  <label
    for="datePicker"
    id="date"
    style="display: flex; justify-content: center; color: #fff"
    >Date</label
  >
  <input type="text" id="datePicker" name="date" />

  <label
    for="timePicker"
    id="time"
    style="display: flex; justify-content: center; color: #fff"
    >Time</label
  >
  <input type="text" id="timePicker" name="time" />

  <label for="name" style="display: flex; justify-content: center; color: #fff"
    >Name</label
  >
  <input type="text" id="name" name="name" />

  <label for="email" style="display: flex; justify-content: center; color: #fff"
    >Email</label
  >
  <input type="email" id="email" name="email" />

  <label for="phone" style="display: flex; justify-content: center; color: #fff"
    >Phone</label
  >
  <input type="tel" id="phone" name="phone" />

  <button
    type="submit"
    class="book-now-btn"
    style="display: flex; justify-content: center; color: #fff"
  >
    Book Now
  </button>
</form>
